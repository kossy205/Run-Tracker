<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.RunTracker" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Customize the color of Material buttons -->

    </style>

    <style name="Theme.RunTracker" parent="Base.Theme.RunTracker" />

    <style name="BottomNavigationTheme" parent="Widget.MaterialComponents.BottomNavigationView">
        <!-- Adjust icon size -->
        <item name="itemIconSize">24dp</item>
        <!-- Adjust the space between the icon and text -->
        <item name="itemIconPadding">8dp</item>
        <!-- Custom text appearance to adjust text size, if needed -->
        <item name="itemTextAppearance">@style/MyBottomNavigationTextAppearance</item>
    </style>

    <style name="MyBottomNavigationTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
    </style>
</resources>